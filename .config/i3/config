####
# Volume
####

# Use PulseAduio cli tool (pactl) to adjust volume in PulseAudio.
# change volume or toggle mute
bindsym XF86AudioRaiseVolume exec amixer -q -D pulse sset Master 5%+ && pkill -RTMIN+1 i3blocks
bindsym XF86AudioLowerVolume exec amixer -q -D pulse sset Master 5%- && pkill -RTMIN+1 i3blocks
bindsym XF86AudioMute exec amixer -q -D pulse sset Master toggle && pkill -RTMIN+1 i3blocks
bindsym XF86AudioMicMute exec pactl set-source-mute 1 toggle && pkill -RTMIN+1 i3blocks
bindsym XF86WLAN exec [ $(nmcli radio wifi) == 'enabled' ] && nmcli radio wifi off || nmcli radio wifi on;


# start a terminal
bindsym $mod+Return exec --no-startup-id alacritty

# kill focused window
bindsym $mod+Shift+q kill

# toggle presentation mode
bindsym Mod1+Shift+p exec --no-startup-id xfconf-query -c xfce4-power-manager -p /xfce4-power-manager/presentation-mode -T

